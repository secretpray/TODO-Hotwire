<%= button_to "Back", root_path, method: :get,
                      class: 'w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 mt-4 dark:bg-gray-800 dark:text-gray-500 dark:border-gray-500 dark:hover:border-gray-400 dark:hover:text-gray-300 dark:hover:bg-gray-700' %>

<h1>Forgot your password?</h1>

<%= form_with(url: password_reset_path) do |form| %>
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, autofocus: true, required: true %>
  </div>

  <div>
    <%= form.submit "Send password reset email" %>
  </div>
<% end %>
