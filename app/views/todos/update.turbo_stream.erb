<% if @todo.errors.any? %>
  <%= turbo_stream.replace("#{dom_id(@todo)}_form", partial: "form", locals: { todo: @todo }) %>
<% else %>
  <%= turbo_stream.replace "#{dom_id(@todo)}_container" do %>
    <%= render "todo", todo: @todo %>
  <% end %>
<% end %>

<%= turbo_stream.prepend "flash", partial: "shared/flash" %>
