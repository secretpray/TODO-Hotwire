<% flash.each do |type, message| %>
  <div class="fixed inset-x-0 top-0 flex items-end justify-right px-4 py-5 sm:p-5 justify-end z-30 pointer-events-none">
    <div
        data-controller="alert"
        data-alert-show-class="translate-x-0 opacity-75"
        data-alert-hide-class="translate-x-full opacity-0"
        class="max-w-sm w-full shadow-lg px-4 py-2 rounded relative bg-white dark:bg-gray-600 border-l-8 border-blue-600 text-gray-600 pointer-events-auto transition translate-x-full transform ease-in-out duration-1000 opacity-0">
      <div class="p-2">
        <div class="flex items-start">
          <div class="ml-3 w-0 flex-1">
            <p class="text-sm leading-5 font-medium">
              <%= content_tag :div, message, class: 'dark:text-gray-300' %>
            </p>
          </div>
          <div class="ml-4 flex-shrink-0 flex">
            <button data-action="alert#close" class="inline-flex dark:text-gray-300 text-gray-500 focus:outline-none dark:focus:text-gray-400 focus:text-gray-600 top-1" style='margin-top: 4px;'>
              <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
